<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csl.sia.com.gosia">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LandingActivity"
            android:theme="@style/AppThemeTest" />
        <activity
            android:name=".RiderMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".DriverMainActivity"
            android:label="@string/title_activity_driver_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DriverNewTripActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DriverSelectPassengerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DriverScheduleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JoinActivity"
            android:theme="@style/AppTheme.OnlyActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.OnlyActionBar" />
        <activity
            android:name=".TripsActivity"
            android:theme="@style/AppTheme.OnlyActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/AppTheme.OnlyActionBar" />
        <activity
            android:name=".FavouriteActivity"
            android:theme="@style/AppTheme.OnlyActionBar" />
        <activity
            android:name=".RiderNewTripActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>