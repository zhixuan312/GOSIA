<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/join_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/my_margin"
        android:layout_marginTop="@dimen/my_margin"
        android:background="@drawable/ic_arrow_back_white_24dp"
        android:clickable="true" />

    <TextView
        android:id="@+id/join_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/my_margin"
        android:text="SIGN UP"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <View
        android:id="@+id/join_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/join_title"
        android:layout_marginTop="@dimen/my_margin"
        android:background="@color/grey" />

    <ImageView
        android:id="@+id/join_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/join_divider1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/my_margin"
        android:padding="30dp" />

    <RelativeLayout
        android:id="@+id/join_relative5"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/join_profile_image"
        android:layout_marginTop="@dimen/my_margin"
        android:background="@color/shade">

        <RadioGroup
            android:id="@+id/join_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_margin"
            android:layout_marginRight="@dimen/my_margin"
            android:checkedButton="@+id/join_radio_rider"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/join_radio_rider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rider"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/join_radio_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/join_radio_rider"
                android:layout_weight="1"
                android:text="Driver"
                android:textColor="@color/colorAccent" />

            <RadioButton
                android:id="@+id/join_radio_both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/join_radio_driver"
                android:layout_weight="1"
                android:text="Both"
                android:textColor="@color/colorAccent" />

        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/join_relative1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/join_relative5"
        android:layout_marginTop="1dp"
        android:background="@color/shade">

        <EditText
            android:id="@+id/join_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_margin"
            android:layout_marginRight="@dimen/my_margin"
            android:background="@android:color/transparent"
            android:hint="First name"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/divider"
            android:textCursorDrawable="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/join_relative2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/join_relative1"
        android:layout_marginTop="1dp"
        android:background="@color/shade">

        <EditText
            android:id="@+id/join_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_margin"
            android:layout_marginRight="@dimen/my_margin"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/divider"
            android:textCursorDrawable="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/join_relative3"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/join_relative2"
        android:layout_marginTop="1dp"
        android:background="@color/shade">

        <EditText
            android:id="@+id/join_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_margin"
            android:layout_marginRight="@dimen/my_margin"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:password="true"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/divider"
            android:textCursorDrawable="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/join_relative4"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/join_relative3"
        android:layout_marginTop="1dp"
        android:background="@color/shade">

        <ImageView
            android:id="@+id/join_spin_globe"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/my_margin"
            android:visibility="gone" />

        <EditText
            android:id="@+id/join_edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/my_margin"
            android:layout_marginRight="@dimen/my_margin"
            android:background="@android:color/transparent"
            android:hint="Confirm password"
            android:password="true"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textCursorDrawable="@color/colorAccent" />
    </RelativeLayout>


    <Button
        android:id="@+id/join_join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/my_margin"
        android:layout_marginRight="@dimen/my_margin"
        android:background="@drawable/square_button_yellow"
        android:text="SIGN UP"
        android:textColor="@color/colorAccent" />

</android.support.percent.PercentRelativeLayout>
